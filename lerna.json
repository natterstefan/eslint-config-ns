{
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": ["main", "next"],
      "conventionalCommits": true,
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": ["*.md", "*.txt", "__test__/**", "**/__tests__/**"],
  "useWorkspaces": true,
  "version": "1.4.1"
}
