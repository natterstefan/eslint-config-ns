{
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "changelog": {
    "ignoreCommitters": [
      "allcontributors",
      "dependabot"
    ],
    "labels": {
      "enhancement": ":rocket: New Feature",
      "bug": ":bug: Bug Fix"
    },
    "nextVersion": "Unreleased"
  },
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "next"
      ]
    },
    "publish": {
      "allowBranch": [
        "master",
        "next"
      ],
      "conventionalCommits": true,
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": [
    "*.md",
    "*.txt",
    "__test__/**",
    "**/__tests__/**"
  ],
  "useWorkspaces": true,
  "version": "1.6.0"
}
